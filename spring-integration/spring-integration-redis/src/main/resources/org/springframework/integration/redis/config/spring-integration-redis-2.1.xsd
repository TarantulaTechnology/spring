<!-- 			<xsd:annotation> -->
<!-- 				<xsd:documentation><![CDATA[ -->
<!-- 	Boolean value indicating whether this channel's listener container should start automatically. -->
<!-- 				]]></xsd:documentation> -->
<!-- 			</xsd:annotation> -->
<!-- 		</xsd:attribute> -->
